[[ $(id -u) -gt 0 ]] && export SUDO='sudo ' || export SUDO=

[ -f ~/.sh/lib/aliases ] && source ~/.sh/lib/aliases
[ -f ~/.sh/lib/functions ] && source ~/.sh/lib/functions
[ -f ~/.myrc ] && source ~/.myrc
[[ ! -f ~/.defaults ]] && gethost > ~/.defaults
source ~/.defaults
