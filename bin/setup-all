export PATH=/bin:/usr/bin:/sbin:/root/.sh/bin

DTYPE=${1:-'mysql'}

echo "### Entering setup-host"
setup-host $DTYPE
echo "### Entering setup-deb"
setup-deb
echo "### Entering setup-db"
setup-db
echo "### Entering setup-etc"
setup-etc
echo "### Entering setup-adm"
setup-adm

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
