#!/usr/bin/env bash
# .sh/bin/serva 20170417 - 20170506
# Copyright (C) 1995-2017 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $2 ]] && echo "Usage: serva start|stop|restart|reload all|dns|mail|php|web" && exit 1

source ~/.sh/lib/defaults || exit 2

serva_web()
{
    [[ $(/usr/sbin/nginx -t > /dev/null 2>&1) -eq 0 ]] && systemctl $1 nginx
}

serva_php()
{

    [[ $(/usr/sbin/php-fpm$V_PHP -t > /dev/null 2>&1) -eq 0 ]] && systemctl $1 php$V_PHP-fpm
}

serva_mail()
{
    [[ $(/usr/sbin/postfix check) -eq 0 ]] && systemctl $1 postfix
    [[ $(/usr/bin/doveconf check) -eq 0 ]] && systemctl $1 dovecot
}

serva_dns()
{
    systemctl $1 pdns
    systemctl $1 pdns-recursor
}

if [[ $2 == all ]]; then
    serva_web $1
    serva_mail $1
    serva_dns $1
elif [[ $2 == dns ]]; then
    serva_dns $1
elif [[ $2 == mail ]]; then
    serva_mail $1
elif [[ $2 == php ]]; then
    serva_php $1
elif [[ $2 == web ]]; then
    serva_web $1
else
    echo "Warning: unknown action '$1'"
fi

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
