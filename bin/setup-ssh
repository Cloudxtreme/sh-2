#!/usr/bin/env bash
# .sh/bin/setup-ssh 20170521 - 20180224
# Copyright (C) 2015-2018 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $1 || $1 == '-h' || $1 == '--help' ]] && \
    echo "Usage: setup-ssh domain [targethost] [user] [port] [sshkey]" && exit 1

[[ $(id -u) -gt 0 ]] && echo "ERROR: must be root (use sudo -i)" && exit 2

source ~/.defaults || exit 2

VHOST=$1
THOST=${2:-$VHOST}
SUSER=${3:-'root'}
SPORT=${4:-'9'}
S_KEY=${5:-'id_rsa'}

if [[ ! -d ~/.ssh ]]; then
    echo ">>> Create local ~/.ssh dir"
    mkdir ~/.ssh
    chmod 700 ~/.ssh
fi

if [[ ! -f ~/.ssh/$S_KEY ]]; then
    echo ">>> Create local ~/.ssh/$S_KEY key"
    ssh-keygen -b 2048 -t rsa -f ~/.ssh/$S_KEY -N '' > /dev/null
    chmod 600 ~/.ssh/$S_KEY*
    echo ">>> Copy public key to $SUSER@$VHOST:.ssh/authorized_keys and chmod 600"
    echo
    cat ~/.ssh/$S_KEY.pub
    echo
fi

grep -q -E "^Host $VHOST\$" ~/.ssh/config
if [[ $? -eq 1 ]]; then
    echo ">>> Create SSH config entry"
    echo "
Host $VHOST
  User $SUSER
  Port $SPORT
  Hostname $THOST
  IdentityFile ~/.ssh/$S_KEY" > ~/.ssh/config.tmp
    cat ~/.ssh/config >> ~/.ssh/config.tmp
    mv ~/.ssh/config.tmp ~/.ssh/config
    chmod 600 ~/.ssh/config
fi

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
