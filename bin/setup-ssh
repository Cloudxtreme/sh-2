#!/usr/bin/env bash
# .sh/bin/setup-ssh 20170521 - 20170521
# Copyright (C) 2015-2017 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $1 ]] && echo "Usage: setup-ssh domain [user] [port] [sshkey] [targethost]" && exit 1

source ~/.sh/lib/functions || exit 2

VHOST=$1
SUSER=${2:-'root'}
SPORT=${3:-'9'}
S_KEY=${4:-'id_rsa'}
SHOST=${5:-$VHOST}

if [[ ! -d ~/.ssh ]]; then
    echo ">>> Create local ~/.ssh dir"
    mkdir ~/.ssh
    chmod 700 ~/.ssh
fi

if [[ ! -f ~/.ssh/$S_KEY ]]; then
    echo ">>> Create local ~/.ssh/$S_KEY key"
    ssh-keygen -b 2048 -t rsa -f ~/.ssh/$S_KEY -N '' > /dev/null
    chmod 600 ~/.ssh/$S_KEY*
    echo ">>> Copy public key to $SUSER@$VHOST:.ssh/authorized_keys and chmod 600"
    echo
    cat ~/.ssh/$S_KEY.pub
    echo
fi

grep -q -E "^Host $VHOST\$" ~/.ssh/config
if [[ $? -eq 1 ]]; then
    echo ">>> Create SSH config entry"
    echo "
Host $VHOST
  User $SUSER
  Port $SPORT
  Hostname $SHOST
  IdentityFile ~/.ssh/$S_KEY" >> ~/.ssh/config
    chmod 600 ~/.ssh/config
fi

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
