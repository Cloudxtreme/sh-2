#!/usr/bin/env bash
# .sh/bin/addcfzone 20181002 - 20181007
# Copyright (C) 1995-2018 Mark Constable <markc@renta.net> (AGPL-3.0)

# Create a partner account at https://partners.cloudflare.com and take
# note of your email address and password. Once logged in then get your
# API Key from https://partners.cloudflare.com/api-management

# See setup-cf

[[ -z $1 || $1 =~ -h ]] && echo "Usage: addcfzone domain" && exit 1

[[ -z $CF_PARTNER_KEY ]] && echo "ERROR: CF_PARTNER_KEY is empty" && exit 2
[[ -z $CF_USER_KEY ]] && echo "ERROR: CF_USER_KEY is empty" && exit 3

_CURL=$(curl -s https://api.cloudflare.com/host-gw.html \
    -d "host_key=$CF_PARTNER_KEY" \
    -d "user_key=$CF_USER_KEY" \
    -d "act=full_zone_set" \
    -d "zone_name=$1")

swdsdel $1
swchangens $1 $CF_NS
