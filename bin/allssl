#!/usr/bin/env bash
# .sh/bin/allssl 20170304 - 20170529
# Copyright (C) 1995-2017 Mark Constable <markc@renta.net> (AGPL-3.0)

# Depends on nginx and DNS already resolving to requested domains

# TODO: add domain|all args and change to updatessl

LECFG=/etc/dehydrated
LESSL=/etc/ssl

[[ -n $1 && $1 == 'force' ]] && FORCE="--force" || FORCE=""

[[ ! -d $LECFG ]] && echo "ERROR: install dehydrated!" && exit 1

cd $LECFG

git pull

ALL=$(/bin/ls -1 $LESSL/*/fullchain.pem)

for i in $ALL; do
    ALTCN=$(openssl x509 -noout -text -in $i | awk -F' DNS:' '/DNS:/ {print $2$3}')
    VHOST=$(basename $(dirname $i))
    WPATH=/home/u/$VHOST/var/www
    VACME=$WPATH/.well-known/acme-challenge

    if [[ ! -d $VACME ]]; then
        mkdir -p $VACME
        chown $(stat -c "%u:%g" $WPATH) -R $WPATH/.well-known
    fi

    echo "WELLKNOWN=$VACME" > config

    D=""; for A in ${ALTCN//,/ }; do D="$D -d $A"; done

    ./dehydrated -c $D $FORCE

    cat $LESSL/$VHOST/privkey.pem $LESSL/$VHOST/fullchain.pem \
        > $LESSL/$VHOST/mailserver.pem

    chmod 644 $LESSL/$VHOST/mailserver.pem

    sleep 1
done

serva restart web
serva restart mail

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
