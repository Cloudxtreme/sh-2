server {
    listen                      80;
    server_name                 ~^cdn\.(?<domain>.+)$;
    location                    ^~ /.well-known { root /home/u/$domain/var/www; }
    location                    / { return 301 https://cdn.$domain$request_uri; }
}
# 20180201 not needed anymore, treat adm.* as a single standalone admin
#          subdomain per physical server rather than a specialised redirect
#          handled by every <domain> vhost
