server {
    listen                      80;
    server_name                 ~^www\.(?<domain>.+)$;
    location                    ^~ /.well-known { root /home/u/$domain/var/www; }
    location                    / { return 301 https://$domain$request_uri; }
}
server {
    listen                      80;
    server_name                 ~^(?<domain>.+);
    location                    ^~ /.well-known { root /home/u/$domain/var/www; }
    location                    / { return 301 https://$domain$request_uri; }
}
